<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_daftar_izin_bawahan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noform_bawahan_izin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/daftar_id_bawhan_izin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:scrollbarSize="10sp"
                android:text="1"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/daftar_nama_bawahan_izin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eko Sukaryanto"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/daftar_tgl_bawahan_izin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TANGGAL CUTI"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/daftar_alasan_bawahan_izin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"

                android:layout_weight="1"
                android:text="alasan"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/daftar_keterangan_bawahan_izin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="bermen"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Atasan :"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/daftar_izin_karyawan_atasan1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Atasan"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/status_atasan1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Atasan 2 :"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/daftar_izin_karyawan_atasan2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Atasan 2"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/status_atasan2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    />


            </LinearLayout>


            <TextView
                android:id="@+id/nipa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nipa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/statusa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/statusa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <TextView
                android:id="@+id/daftar_nama_atasan_bawahan_izin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:scrollbarSize="10sp"
                android:text="SARKIYEM"
                android:textColor="@color/disaprove_color"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/daftar_jml_hari_bawahan_izin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:scrollbarSize="10sp"
            android:text="1 Hari"
            android:textColor="@color/black" />


    </LinearLayout>


</android.support.v7.widget.CardView>