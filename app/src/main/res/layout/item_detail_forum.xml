<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-4dp"
    android:layout_marginTop="@dimen/spacing_xsmall"
    android:background="@color/white"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_weight="2.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/img_thumb_srch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_folder" />
        </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/search_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:layout_weight="1"
                    android:textColor="@color/text_blue"
                    />
                <TextView
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:id="@+id/search_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Topic information"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/ic_person_circle"/>
                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="replied name"
                        android:textColor="@color/black"
                        android:layout_marginRight="2dp"
                        android:id="@+id/forum_ripled_name"/>
                    <TextView
                        android:layout_weight="0.4"
                        android:text="last_update_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="POSTS"/>



        </LinearLayout>



    </LinearLayout>




</android.support.v7.widget.CardView>